<html lang='en'>

    <head>
        <meta charset='UTF-8' />
        <title>BookingUni</title>
        <link rel='stylesheet' href='/css/style.css' />
    </head>

    <body>

        <div id='container'>
            {{! <div> }}
            {{! <div class='notification loadingBox'>
                    Loading â€¦
                </div>
                <div class='notification infoBox'>
                    <span>Info</span>
                </div> }}
            {{#if errors}}
                <div class='notification errorBox'>
                    {{#each errors}}
                        <span>{{this}}</span>
                    {{/each}}
                </div>
            {{/if}}
            {{! </div> }}
            <nav>
                {{#if user}}
                    <div class='left-container'>
                        <ul>
                            <li><a href='/home'>Home</a></li>
                            <li><a href='/crud/create'>Add +</a></li>
                        </ul>
                    </div>
                    <div class='right-container'>
                        <a href='/auth/profile' class='log-out'>{{user.username}}</a>
                        <a href='/auth/logout' class='log-out'>Logout</a>
                    </div>
                {{else}}
                    <div class='left-container'>
                        <ul>
                            <li><a href='/'>Home</a></li>
                            <li><a href='/auth/login'>Login</a></li>
                            <li><a href='/auth/register'>Register</a></li>
                        </ul>
                    </div>
                {{/if}}
            </nav>
            {{{body}}}
            <footer>@SoftUni - JS Back-end - BookingUni 2020</footer>
        </div>

    </body>

</html>