<section class='details-page'>
  <h1>Details</h1>
  <article class='details-card'>

    <article class='details-card-text'>
      <h2>Title:<br /> {{data.title}}</h2>
      <h3>Author: {{data.author}}</h3>
      <h3>Stars: {{data.stars}}</h3>
      <h3>Genre: {{data.genre}}</h3>
      <h3>Review:
        {{data.review}}
      </h3>

      <!-- If there is no registered user, do not display buttons-->
      {{#if user}}
        <div class='buttons'>
          <!-- Only for registered user and author of the review -->
          {{#if data.isOwner}}
            <a href='/book/{{data._id}}/edit' class='btn-edit'>Edit</a>
            <a href='/book/{{data._id}}/delete' class='btn-delete'>Delete</a>
            <!-- logged in user who has not yet wished book-->
          {{else}}
            {{#if data.isWished}}
              <p class='wish-pub'>You already added the book to your wish list</p>
            {{else}}
              <a href='/book/{{data._id}}/wish' class='btn-wish'>Wish to read</a>
              <!-- logged in user who has already wished book-->
            {{/if}}
          {{/if}}
        </div>
      {{/if}}

    </article>

    <article class='details-card-image'>
      <img src='{{data.image}}' />
    </article>

  </article>
</section>