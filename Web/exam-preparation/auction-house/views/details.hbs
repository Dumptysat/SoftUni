{{#with auction}}

<section id='catalog-section'>

  <h1 class='item'>
    {{title}}
    {{#if isAuthor}}
    <div class='f-right'>
      <a class='action pad-small f-left' href='/auction/{{_id}}/edit'>Edit</a>
      <a class='action pad-small f-left' href='/auction/{{_id}}/delete'>Delete</a>
    </div>
    {{/if}}
  </h1>
  <div class='item padded'>

    <div class='layout right large'>

      <div class='col'>
        <img src='{{image}}' class='img-large' />
      </div>

      <div class='content pad-med'>
        <p>In category: <strong>{{category}}</strong></p>
        <p>{{description}}</p>

        <div class='align-center'>
          <div>
            Current price: $<strong>{{price}}</strong>
          </div>
          {{#if user}}
          {{#if isAuthor}}
          <div class="closed-auction">
            {{#if lastBidder}}
            {{#with lastBidder}}
            Bid by
            <strong>{{firstName}} {{lastName}}</strong>
            <a href="auction/{{_id}}/close">Close Auction</a>
            {{/with}}
            {{else}}
            No bids
            {{/if}}
          </div>
          {{else}}
          {{#if hasBid}}
          <div>
            You are currently the
            <strong>highest bidder</strong>
            for this auction
          </div>
          {{else}}
          <form class='vertical' method='post' action='/auction/{{_id}}/bid'>
            <label><span>Bid amount</span><input type='number' name='bidPrice' value="{{bidPrice}}" /></label>
            <input class='action' type='submit' value='Place bid' />
          </form>
          {{/if}}
          {{/if}}
          {{/if}}

        </div>

      </div>
    </div>

    <footer>Listed by {{author.firstName}} {{author.lastName}}</footer>
  </div>

</section>
{{/with}}